<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="256dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <LinearLayout
        android:id="@+id/linearLayout_info_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_expanded_cityName_title"
            style="@style/TextAppearance.Compat.Notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_shadow_end_color"
            android:paddingLeft="8dp"
            android:text="CityName"
            android:textAlignment="center"
            android:textColor="@color/cardview_shadow_start_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_view_expanded_cityName"
            style="@style/TextAppearance.Compat.Notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_shadow_end_color"
            android:paddingLeft="8dp"
            android:text="CityName"
            android:textAlignment="center"
            android:textColor="@color/cardview_shadow_start_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_view_expanded_solar_rad_title"
            style="@style/TextAppearance.Compat.Notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_shadow_end_color"
            android:paddingLeft="8dp"
            android:text="Solar Rad"
            android:textAlignment="center"
            android:textColor="@color/cardview_shadow_start_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_view_expanded_solar_rad"
            style="@style/TextAppearance.Compat.Notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_shadow_end_color"
            android:paddingLeft="8dp"
            android:text="Solar Rad"
            android:textAlignment="center"
            android:textColor="@color/cardview_shadow_start_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_view_expanded_wind_dir_title"
            style="@style/TextAppearance.Compat.Notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_shadow_end_color"
            android:paddingLeft="8dp"
            android:text="Wind Direction"
            android:textAlignment="center"
            android:textColor="@color/cardview_shadow_start_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_view_expanded_wind_dir"
            style="@style/TextAppearance.Compat.Notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_shadow_end_color"
            android:paddingLeft="8dp"
            android:text="Wind Direction"
            android:textAlignment="center"
            android:textColor="@color/cardview_shadow_start_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_view_expanded_wind_spd_title"
            style="@style/TextAppearance.Compat.Notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_shadow_end_color"
            android:paddingLeft="8dp"
            android:text="Wind Speed"
            android:textAlignment="center"
            android:textColor="@color/cardview_shadow_start_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_view_expanded_wind_spd"
            style="@style/TextAppearance.Compat.Notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_shadow_end_color"
            android:paddingLeft="8dp"
            android:text="Wind Speed"
            android:textAlignment="center"
            android:textColor="@color/cardview_shadow_start_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_view_expanded_pres_title"
            style="@style/TextAppearance.Compat.Notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_shadow_end_color"
            android:paddingLeft="8dp"
            android:text="Pressure"
            android:textAlignment="center"
            android:textColor="@color/cardview_shadow_start_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_view_expanded_pres"
            style="@style/TextAppearance.Compat.Notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_shadow_end_color"
            android:paddingLeft="8dp"
            android:text="Pressure"
            android:textAlignment="center"
            android:textColor="@color/cardview_shadow_start_color"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>